mixin text-input(attr)
  if attr.mod === 'subscription'
    .text-input__flex-wrap
      input(type=attr.type, placeholder=attr.placeholder)(class='text-input_with-button text-input_subscription')
      input(type="submit", value="arrow_forward", class='material-icons text-input__submit-button')
  else
    input(type=attr.type, placeholder=attr.placeholder)(class='text-input', class=(attr.mod==='mask' ? 'text-input_masked' : attr.mod==='sub' ? 'text-input_subscription' : ''))