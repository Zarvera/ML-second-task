include blocks/color-display/color-display
include blocks/font-display/font-display
include blocks/form/form
include blocks/fieldset/fieldset
include blocks/text-input/text-input
include blocks/dropdown/dropdown
include blocks/datepicker/datepicker
include blocks/date-filter/date-filter
include blocks/checkbox/checkbox
include blocks/radio-button/radio-button
include blocks/like-button/like-button
include blocks/rate-button/rate-button
include blocks/range-slider/range-slider
include blocks/button/button
include blocks/pagination/pagination

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title UI-kit
  body
    .main-wrap
      .colors-and-types
        .display-container
          +color-display('_primary-color100', 'Dark Shade 100%', '#1F2041')
          +color-display('_primary-color75', 'Dark Shade 75%', '#1F2041')
          +color-display('_primary-color50', 'Dark Shade 50%', '#1F2041')
          +color-display('_primary-color25', 'Dark Shade 25%', '#1F2041')
          +color-display('_primary-color5', 'Dark Shade 5%', '#1F2041')
          +color-display('_accent-color', 'Purple', '#BC9CFF')
          +color-display('_selection-color', 'Green', '#6FCF97')
        .display-container
          +font-display('h1', 'H1', 'This one is the sub-section or widget title')
          +font-display('h2', 'H2', 'Next one is the item title inside widgets')
          +font-display('h3', 'H3', 'THIS IS A LABEL CTA TEXT')
          +font-display('p', 'Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')
      .form-elements
        .form-wrap
          .form-wrap-column
            .text-input-wrap
              +fieldset({title: 'text field'})
                +text-input({type: 'text', placeholder: 'Email'})
              +fieldset({title: 'text field'})
                +text-input({type: 'text'})
              +fieldset({title: 'dropdown'})
                +dropdown({options: ['спальни', 'кровати', 'ванные комнаты'], placeholder: 'Сколько гостей', id: "dd1"})
              +fieldset({title: 'masked text field'})
                +text-input({type: 'text', placeholder: 'ДД.ММ.ГГГГ', mod: 'mask'})
            .dropdown-wrap
              +form
                +fieldset({title: 'date dropdown', size: 'tiny'})
                  +datepicker('from')
                +fieldset({title: 'date dropdown', size: 'tiny', margin: true})
                  +datepicker('to')
              +fieldset({title: 'filter date dropdown', size: 'small'})
                +date-filter
              +fieldset({title: 'subscription text field', size: 'small'})
                +text-input({type: 'email', mod: 'subscription'})
          .form-wrap-column
            +fieldset({title: 'checkbox buttons', size: 'smaller'})
              .checkbox-wrap
                +checkbox({text: 'Можно курить', id: 'smoke', name: 'smoke'})
                +checkbox({text: 'Можно с питомцами', id: 'pets', name: 'pets', checked: true})
                +checkbox({text: 'Можно пригласить гостей (до 10 человек)', id: 'allow-guests', name: 'allow-guests', checked: true})
            +fieldset({title: 'radio buttons', size: 'smaller'})
              .radio-wrap
                +radio-button({label: 'Мужчина', id: 'men', name: 'sex', checked: true})
                +radio-button({label: 'Женщина', id: 'woman', name: 'sex'})
            +fieldset({title: 'toggle', size: 'small'})
              .toggle-wrap
                +checkbox({text: 'Получать спецпредложения', id: 'deals', name: 'deals', mod: 'toggle', checked: true})
                +checkbox({text: 'Получать спецпредложения', id: 'deals2', name: 'deals', mod: 'toggle'})
            +fieldset({title: 'like button'})
              .like-wrap
                +like-button({value: '2'})
                +like-button({id: 'like-inited', value: '11'})
            +fieldset({title: 'rate button'})
              .rate-wrap
                +rate-button({id: 'rate-inited4'})
                +rate-button({id: 'rate-inited5'})
          .form-wrap-column
            +fieldset({title: 'range slider', size: 'small'})
              +range-slider
            +fieldset({title: 'buttons'})
              .button-wrap
                +button({type: 'button', value: 'click me', style: 'filled'})
                +button({type: 'button', value: 'click me', style: 'filled'})
              .button-wrap
                +button({type: 'button', value: 'click me', style: 'border'})
                +button({type: 'button', value: 'click me', style: 'border'})
              .button-wrap
                +button({type: 'button', value: 'click me'})
                +button({type: 'button', value: 'click me'})
              +button({type: 'submit', value: 'перейти к оплате', style: 'submit'})
            +fieldset({title: 'pagination'})
              +pagination({text: '1-12 из 100+ вариантов аренды'})
        .inited-dropdowns-wrap
          +fieldset({title: 'dropdown'})
            +dropdown({options: ['спальни', 'кровати', 'ванные комнаты'], placeholder: 'Сколько гостей', id: "dd2"})